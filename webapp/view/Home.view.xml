<mvc:View
    controllerName="vcd94xt10z.fiorieco.fiorieco.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:tnt="sap.tnt"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <!-- CABEÇALHO -->
                    <l:VerticalLayout
                        width="100%" height="220px"
                        class="gridWrapper">
                        <l:Grid
                            containerQuery="true">
                            <html:div class="exampleDiv">
                                <Image src="/img/shop-logo.png"/>
                            </html:div>
                            <html:div class="exampleDiv">
                                
                                <SearchField>
                                    <layoutData>
                                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                                    </layoutData>
                                </SearchField>

                            </html:div>
                            <html:div class="exampleDiv">

                                <l:VerticalLayout class="sapUiContentPadding" width="100%">
                                    <Text text="Bem vindo" />
                                    <Text text="Entrar" />
                                </l:VerticalLayout>

                            </html:div>
                            <html:div class="exampleDiv">

                                <Button
                                    id="BadgedButton"
                                    class="sapUiTinyMarginBeginEnd"
                                    icon="sap-icon://cart"
                                    type="Default"
                                    text="Carrinho">
                                    <customData>
                                        <BadgeCustomData
                                            key="badge"
                                            value="2"
                                            visible="true"/>
                                    </customData>
                                </Button>

                            </html:div>
                        </l:Grid>
                    </l:VerticalLayout>

                    <!-- MENU -->
                    <tnt:ToolHeader>
                        <Button icon="sap-icon://menu2" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                        <MenuButton text="Novidades" type="Transparent">
                            
                        </MenuButton>
                        <MenuButton text="Promoções" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="Low" />
                            </layoutData>
                        </MenuButton>
                        <MenuButton text="Queima" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="Low" />
                            </layoutData>
                        </MenuButton>
                        <tnt:ToolHeaderUtilitySeparator />
                        <ToolbarSpacer>
                            <layoutData>
                                <OverflowToolbarLayoutData minWidth="20px" />
                            </layoutData>
                        </ToolbarSpacer>
                        
                        <Button text="Contato" type="Transparent" press=".onUserNamePress" ariaHasPopup="Menu">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </tnt:ToolHeader>

                    <!-- CAROUSEL -->
                    <Carousel height="320px" showPageIndicator="false">
                        <Image src="/img/b2.jpg"/>
                        <Image src="/img/b3.jpg"/>
                        <Image src="/img/b4.jpg"/>
                    </Carousel>

                    <!-- LISTA DE PRODUTOS -->
                    <QuickViewCard
                        id="quickViewCard"
                        pages=""
                        navigate=".onNavigate"
                        afterNavigate=".onAfterNavigate">
                        <QuickViewPage
                            pageId="pageId"
                            header="header"
                            title="title"
                            titleUrl="titleUrl"
                            description="description"
                            groups="{
                                path: 'groups',
                                templateShareable: true
                            }">
                            <avatar>
                                <Avatar
                                    src="{icon}"
                                    displayShape="1"
                                />
                            </avatar>
                            <QuickViewGroup heading="heading" elements="{ path: 'elements', templateShareable: true }">
                                <QuickViewGroupElement
                                    label="label"
                                    value="value"
                                    url="url"
                                    type="elementType"
                                    pageLinkId="pageLinkId"
                                    emailSubject="emailSubject"
                                    target="target" />
                            </QuickViewGroup>
                        </QuickViewPage>

                        <QuickViewPage
                            pageId="pageId2"
                            header="header"
                            title="title"
                            titleUrl="titleUrl"
                            description="description"
                            groups="{
                                path: 'groups',
                                templateShareable: true
                            }">
                            <avatar>
                                <Avatar
                                    src="{icon}"
                                    displayShape="1"
                                />
                            </avatar>
                            <QuickViewGroup heading="heading" elements="{ path: 'elements', templateShareable: true }">
                                <QuickViewGroupElement
                                    label="label"
                                    value="value"
                                    url="url"
                                    type="elementType"
                                    pageLinkId="pageLinkId"
                                    emailSubject="emailSubject"
                                    target="target" />
                            </QuickViewGroup>
                        </QuickViewPage>
                    </QuickViewCard>

                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>