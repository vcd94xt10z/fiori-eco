<mvc:View
    controllerName="vcd94xt10z.fiorieco.fiorieco.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:tnt="sap.tnt"
    xmlns:card="sap.f.cards"
